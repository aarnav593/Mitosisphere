---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Mitosisphere provides expert-designed resources for advanced biology. Join 1000+ students from 19 countries mastering USABO and biology competitions." />
    <meta name="keywords" content="USABO, biology competition, science bowl, biology education, USABO preparation, biology resources, Mitosisphere" />
    <meta name="author" content="Mitosisphere" />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Expert-designed resources for advanced biology. Join 1000+ students from 19 countries mastering USABO." />
    <meta property="og:image" content="/logo.png" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Expert-designed resources for advanced biology. Join 1000+ students from 19 countries mastering USABO." />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Epilogue:wght@300;400;600;800;900&display=swap" rel="stylesheet">
    
    <!-- MathJax for LaTeX -->
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    
    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-MTGS0M0Q0Q"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-MTGS0M0Q0Q');
    </script>
    
    <!-- Structured Data (JSON-LD) for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "EducationalOrganization",
        "name": "Mitosisphere",
        "description": "Expert-designed resources for advanced biology. Join 1000+ students from 19 countries mastering USABO.",
        "url": "https://mitosisphere.org",
        "logo": "https://mitosisphere.org/logo.png",
        "sameAs": [
          "https://discord.gg/Sq3nTXyS6D"
        ],
        "offers": {
          "@type": "Offer",
          "category": "Education",
          "availability": "https://schema.org/InStock",
          "price": "0",
          "priceCurrency": "USD"
        }
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --purple: #9A50D8;
    --blue: #3FB8D3;
    --indigo: #6A6AD4;
    --bg-dark: #0a0e1a;
    --bg-darker: #050810;
    --bg-card: #13182b;
    --text: #e8eaf0;
    --text-muted: #a8b0c8;
    --border: rgba(154, 80, 216, 0.2);
  }

  html {
    scroll-behavior: smooth;
    scroll-snap-type: y mandatory;
  }

  body {
    font-family: 'Epilogue', sans-serif;
    background: var(--bg-darker);
    color: var(--text);
    overflow-x: hidden;
    height: 100vh;
    overflow-y: scroll;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(154, 80, 216, 0.15), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(63, 184, 211, 0.12), transparent 50%);
    animation: bgFloat 20s ease-in-out infinite alternate;
    pointer-events: none;
    z-index: 0;
  }

  @keyframes bgFloat {
    0% { transform: scale(1) translate(0, 0); }
    100% { transform: scale(1.1) translate(-10px, -10px); }
  }

  section {
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100px 20px 40px;
    opacity: 1;
    transform: scale(1);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  section.in-view {
    opacity: 1;
    transform: scale(1);
  }

  #hero {
    opacity: 1;
    transform: scale(1);
  }

  .snowflake {
    position: fixed;
    top: -10px;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.2em;
    pointer-events: none;
    z-index: 9999;
    animation: fall linear forwards;
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
  }

  @keyframes fall {
    to {
      transform: translateY(110vh) rotate(360deg);
      opacity: 0;
    }
  }

  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    backdrop-filter: blur(20px);
    background: rgba(10, 14, 26, 0.9);
    border-bottom: 1px solid var(--border);
    padding: 20px 40px;
  }

  .nav-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

 .logo {
    font-family: 'JetBrains Mono', monospace;
    font-size: 20px;
    font-weight: 700;
    color: var(--text);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .logo img {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }

  .nav-links {
    display: flex;
    gap: 35px;
  }

  .nav-links a {
    color: var(--text-muted);
    text-decoration: none;
    font-weight: 600;
    font-size: 15px;
    transition: color 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--purple), var(--blue));
    transition: width 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--text);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1000px;
    text-align: center;
  }

  .hero-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(154, 80, 216, 0.15);
    border: 1px solid var(--border);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    color: var(--purple);
    margin-bottom: 30px;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .typing-title {
    font-size: clamp(48px, 8vw, 96px);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 30px;
    letter-spacing: -2px;
    min-height: 220px;
  }

  .typing-line {
    background: linear-gradient(135deg, var(--purple), var(--blue), var(--indigo));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    display: inline;
  }

  .cursor {
    display: inline-block;
    width: 4px;
    height: 1em;
    background: var(--purple);
    margin-left: 4px;
    animation: blink 1s step-end infinite;
    vertical-align: bottom;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hero-subtitle {
    font-size: clamp(18px, 3vw, 24px);
    color: var(--text-muted);
    margin-bottom: 40px;
    font-weight: 400;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 16px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--purple), var(--blue));
    color: white;
    box-shadow: 0 10px 30px rgba(154, 80, 216, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(154, 80, 216, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-3px);
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
    animation: float 15s ease-in-out infinite;
  }

  .orb1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--purple), transparent);
    top: 10%;
    left: 10%;
  }

  .orb2 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, var(--blue), transparent);
    bottom: 20%;
    right: 15%;
    animation-delay: 2s;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    33% { transform: translate(30px, -30px); }
    66% { transform: translate(-20px, 20px); }
  }

  .dna-helix {
    position: absolute;
    right: 5%;
    top: 50%;
    transform: translateY(-50%);
    width: 120px;
    height: 400px;
    opacity: 0.3;
  }

  .base-pair {
    position: absolute;
    width: 100%;
    height: 8px;
    background: linear-gradient(90deg, var(--purple), var(--blue));
    border-radius: 4px;
    animation: rotate 4s linear infinite;
    transform-origin: center;
  }

  @keyframes rotate {
    from { transform: rotateY(0deg); }
    to { transform: rotateY(360deg); }
  }

  #stats {
    background: var(--bg-dark);
    padding: 60px 20px !important;
    min-height: auto !important;
  }

  .stats-container {
    max-width: 900px;
    width: 100%;
    background: linear-gradient(135deg, rgba(154, 80, 216, 0.1), rgba(63, 184, 211, 0.1));
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 50px 60px;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .stats-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--purple), var(--blue), var(--indigo));
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 80px;
    position: relative;
    z-index: 1;
  }

  .stat-card {
    text-align: center;
    position: relative;
  }

  .stat-card::after {
    content: '';
    position: absolute;
    right: -40px;
    top: 50%;
    transform: translateY(-50%);
    width: 2px;
    height: 80px;
    background: linear-gradient(180deg, transparent, var(--purple), var(--blue), transparent);
  }

  .stat-card:last-child::after {
    display: none;
  }

  .stat-number {
    font-size: 72px;
    font-weight: 900;
    background: linear-gradient(135deg, var(--purple), var(--blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-family: 'JetBrains Mono', monospace;
    margin-bottom: 12px;
    line-height: 1;
  }

  .stat-label {
    color: var(--text-muted);
    font-size: 15px;
    font-weight: 500;
    margin-bottom: 15px;
    line-height: 1.4;
  }

  .stat-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--purple);
    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    transition: all 0.3s ease;
    padding: 8px 16px;
    background: rgba(154, 80, 216, 0.1);
    border-radius: 100px;
    border: 1px solid rgba(154, 80, 216, 0.3);
  }

  .stat-link:hover {
    color: var(--blue);
    gap: 12px;
    background: rgba(63, 184, 211, 0.15);
    border-color: var(--blue);
    transform: translateY(-2px);
  }

  .discord-icon {
    width: 20px;
    height: 20px;
    display: inline-block;
    background: url('/assets/icons/discord-logo.png') center/contain no-repeat;
  }

  .cell-animation {
    position: absolute;
    transform: translateY(-50%);
    width: 100px;
    height: 100px;
    opacity: 0.25;
    z-index: 0;
  }

  .cell {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 2px solid var(--purple);
    border-radius: 50%;
    animation: divide 4s ease-in-out infinite;
    box-shadow: 0 0 20px rgba(154, 80, 216, 0.3);
  }

  @keyframes divide {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 1;
    }
    50% {
      transform: translate(15px, 0) scale(0.7);
      opacity: 0.4;
    }
  }

  .section-title {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title h2 {
    font-size: clamp(36px, 6vw, 64px);
    font-weight: 900;
    margin-bottom: 15px;
    letter-spacing: -1px;
  }

  .section-title p {
    color: var(--text-muted);
    font-size: 18px;
  }

  .carousel-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    height: 550px;
  }

  .carousel {
    position: relative;
    width: 100%;
    height: 100%;
  }

 .initiative-card {
    position: absolute;
    width: 100%;
    max-width: 700px;
    left: 52%;
    top: 50%;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 50px 50px 50px 80px;
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .initiative-card.active {
    opacity: 1;
    pointer-events: all;
    z-index: 10;
    transform: translate(-50%, -50%) scale(1);
  }

  .initiative-card.prev {
    opacity: 0.2;
    transform: translate(-50%, -50%) translateX(-150%) scale(0.85);
    filter: blur(3px);
  }

  .initiative-card.next {
    opacity: 0.2;
    transform: translate(-50%, -50%) translateX(150%) scale(0.85);
    filter: blur(3px);
  }

  .initiative-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--purple), var(--blue));
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    margin-bottom: 25px;
  }

  .initiative-card h3 {
    font-size: 32px;
    margin-bottom: 15px;
    font-weight: 800;
  }

  .initiative-status {
    display: inline-block;
    padding: 6px 16px;
    background: rgba(45, 159, 111, 0.2);
    color: #2d9f6f;
    border-radius: 100px;
    font-size: 13px;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .initiative-status.coming-soon {
    background: rgba(244, 162, 97, 0.2);
    color: #f4a261;
  }

  .initiative-card p {
    color: var(--text-muted);
    font-size: 17px;
    line-height: 1.7;
    margin-bottom: 20px;
  }

  .carousel-nav {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 40px;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .carousel-dot.active {
    background: linear-gradient(135deg, var(--purple), var(--blue));
    width: 40px;
    border-radius: 10px;
  }

  #competitions {
    background: var(--bg-dark);
  }

  .competitions-container {
    max-width: 1200px;
    width: 100%;
  }

  .competition-main {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 50px;
    margin-bottom: 40px;
  }

  .competition-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .competition-header h3 {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 15px;
  }

  .p-q-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    margin-bottom: 40px;
  }

  .p-q-round {
    text-align: center;
    padding: 30px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(154, 80, 216, 0.15);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .p-q-round:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--purple);
    transform: translateY(-5px);
  }

  .latex-formula {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text);
  }

  .p-q-round h4 {
    font-size: 24px;
    margin-bottom: 15px;
    color: var(--purple);
  }

  .p-q-round p {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .other-competitions {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .other-comp-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 20px;
    padding: 35px;
    transition: all 0.3s ease;
  }

  .other-comp-card:hover {
    border-color: var(--purple);
    transform: translateY(-5px);
    box-shadow: 0 20px 50px rgba(154, 80, 216, 0.2);
  }

  .comp-icon {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .other-comp-card h4 {
    font-size: 24px;
    margin-bottom: 12px;
    font-weight: 700;
  }

  .other-comp-card p {
    color: var(--text-muted);
    line-height: 1.6;
  }

  .team-container {
    width: 100%;
    max-width: 1400px;
  }

  .leadership-tier {
    margin-bottom: 60px;
    text-align: center;
  }

  .tier-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--purple);
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .leadership-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 30px;
    max-width: 800px;
    margin: 0 auto;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 25px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .team-member {
    text-align: center;
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .team-member:hover {
    transform: translateY(-8px);
  }

  .member-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin: 0 auto 12px;
    background: linear-gradient(135deg, var(--purple), var(--blue));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    font-weight: 700;
    border: 3px solid var(--border);
    position: relative;
    overflow: hidden;
  }

  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .member-name {
    font-weight: 700;
    margin-bottom: 4px;
    font-size: 15px;
  }

  .member-role {
    color: var(--text-muted);
    font-size: 13px;
    line-height: 1.3;
  }

  .org-connector {
    width: 2px;
    height: 40px;
    background: linear-gradient(180deg, var(--purple), transparent);
    margin: 0 auto 20px;
  }

  .join-team-cta {
    background: linear-gradient(135deg, rgba(154, 80, 216, 0.2), rgba(63, 184, 211, 0.2));
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .join-team-cta h3 {
    font-size: 36px;
    margin-bottom: 15px;
  }

  .join-team-cta p {
    color: var(--text-muted);
    font-size: 18px;
    margin-bottom: 30px;
    line-height: 2;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Partners Section Styles */
  .partners-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .partner-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .partner-card:hover {
    transform: translateY(-8px);
    border-color: var(--purple);
    box-shadow: 0 20px 50px rgba(154, 80, 216, 0.2);
  }

  .partner-card img {
    max-height: 80px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    filter: brightness(0.9);
    transition: filter 0.3s ease;
  }

  .partner-card:hover img {
    filter: brightness(1.1);
  }

