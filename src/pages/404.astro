---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
  <div class="page">
    <div id="bounce-container">
      <img src="/logo.png" alt="Bouncing Logo" class="logo" />
    </div>

    <div class="overlay">
      <div class="text-center">
        <h1>404 (You're in the Wrong Place)</h1>
        <p>Maybe you were looking for one of my sister cells?</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .page {
    position: relative;
    width: 100vw;
    height: 100vh;
  }

  #bounce-container {
    position: absolute;
    inset: 0;
    background: #fff;
    overflow: hidden;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    pointer-events: none;
    z-index: 10;
    text-align: center;
  }

  .overlay h1 {
    font-size: 3rem;
    font-weight: 800;
    color: #000;
  }

  .overlay p {
    margin-top: 1rem;
    font-size: 1.25rem;
    color: #000;
  }

  .logo {
    position: absolute;
    width: 100px;
    height: 100px;
    will-change: transform;
  }
</style>

  <!-- Google tag (gtag.js) -->
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-MTGS0M0Q0Q"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
