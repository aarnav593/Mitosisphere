---
import Layout from "@layouts/Layout.astro";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import '../styles/global.css';

---

<Layout title="Mitosisphere: Multiplying Success, One Division at a Time">
  <style>
    /* NEW: Elegant & Academic Modern Palette */
    :root {
      --color-logo-purple: #9A50D8;
      --color-logo-blue: #3FB8D3;
      --color-logo-text: #6A6AD4;

      --color-bg: #F8FAFC;         /* A very light, cool gray (slate-50) */
      --color-card-bg: #FFFFFF;     /* Pure white for cards to lift them */
      
      --color-heading: #1E293B;      /* A deep, rich slate for headings (slate-800) */
      --color-body: #475569;         /* A softer slate for body text (slate-600) */
      --color-subtle-text: #94A3B8;  /* A lighter slate for muted text (slate-400) */

      --color-border: #E2E8F0;       /* A subtle border color (slate-200) */
      --color-accent-border: #CBD5E1; /* A slightly stronger border for hover (slate-300) */
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--color-bg);
      color: var(--color-body);
      line-height: 1.7;
    }

    h1, h2, h3, h4, h5, h6 {
      color: var(--color-heading);
      font-weight: 700;
    }
    
    .hero-button {
      background-color: var(--color-logo-text);
      color: white;
      box-shadow: 0 4px 14px 0 rgba(106, 106, 212, 0.3);
      transition: all 0.3s ease;
    }
    .hero-button:hover {
      transform: translateY(-2px);
      background-color: #5555C3; /* A slightly darker shade of the logo text color */
      box-shadow: 0 6px 20px 0 rgba(106, 106, 212, 0.35);
    }

    .hero-secondary-button {
      background-color: transparent;
      color: var(--color-logo-text);
      border: 1px solid var(--color-border);
      transition: all 0.3s ease;
    }
    .hero-secondary-button:hover {
      background-color: var(--color-card-bg);
      border-color: var(--color-logo-text);
      transform: translateY(-2px);
    }
    
    .initiative-card {
      background-color: var(--color-card-bg);
      border: 1px solid var(--color-border);
      border-radius: 0.75rem;
      transition: all 0.3s ease;
    }
    .initiative-card:hover {
      transform: translateY(-5px);
      border-color: var(--color-accent-border);
      box-shadow: 0 10px 30px -10px rgba(30, 41, 59, 0.1);
    }
    
    .join-team-section {
      background-color: #312E81; /* A deep, elegant indigo */
    }
    .join-team-section h2,
    .join-team-section p {
      color: white;
    }
    .join-team-section .link-primary {
      background-color: white;
      color: #312E81;
      font-weight: 700;
      box-shadow: 0 4px 14px 0 rgba(0,0,0,0.1);
    }
    .join-team-section .link-primary:hover {
       background-color: #F0F2FF;
    }

    footer {
      background-color: var(--color-card-bg);
      border-top: 1px solid var(--color-border);
      color: var(--color-subtle-text);
    }
    footer a {
      color: var(--color-body);
      text-decoration: none;
    }
    footer a:hover {
      color: var(--color-logo-text);
      text-decoration: underline;
    }

  </style>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-MTGS0M0Q0Q"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-MTGS0M0Q0Q');
  </script>

  <div class="bg-slate-50">
    <Container class="text-center pt-16 pb-16 md:pt-24 md:pb-24">
      <img src="/logo.png" alt="Mitosisphere Logo" class="mx-auto w-40 h-40 md:w-52 md:h-52 mb-8" />
      <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight leading-tight text-slate-800">
        Empowering the Next Generation of <span style=`color: ${'var(--color-logo-text)'}`>Scholars</span>.
      </h1>
      <p class="text-lg md:text-xl max-w-3xl mx-auto text-slate-600 mt-6">
        Mitosisphere provides expert-designed resources for advanced biology.
      </p>
      <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
        <Link
          href="/initiatives"
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg shadow-sm hero-button"
        >
          Explore Resources
        </Link>
        <Link
          href="/competitions"
          class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg shadow-sm hero-secondary-button"
        >
          View Competitions
        </Link>
      </div>
    </Container>
  </div>

  <main>
    <section class="bg-white py-16 md:py-24 border-y border-slate-200">
      <Container>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 text-center max-w-4xl mx-auto">
          <div>
            <p class="text-5xl font-extrabold" style=`color: ${'var(--color-logo-blue)'}`>1000+</p>
            <p class="text-slate-700 mt-3 text-lg">Exam Competitors from 19 Countries</p>
          </div>
          <div>
            <p class="text-5xl font-extrabold" style=`color: ${'var(--color-logo-purple)'}`>300+</p>
            <p class="text-slate-700 mt-3 text-lg">Active Discord Community Members</p>
          </div>
        </div>
      </Container>
    </section>

    <section class="bg-slate-50 py-16 md:py-24">
      <Container>
        <Sectionhead>
          <Fragment slot="title">Our Initiatives:</Fragment>
          <Fragment slot="desc">Key resources to power your biology journey.</Fragment>
        </Sectionhead>
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="initiative-card p-8">
            <Icon name="uil:dna" class="w-10 h-10 mb-5" style=`color: ${'var(--color-logo-blue)'}` />
            <h3 class="text-xl font-bold mb-3">Exams</h3>
            <p class="leading-relaxed text-slate-600">
              We host our signature USABO-style mock exams each year, providing realistic practice.
            </p>
          </div>
          <div class="initiative-card p-8">
            <Icon name="uil:brain" class="w-10 h-10 mb-5" style=`color: ${'var(--color-logo-purple)'}` />
            <h3 class="text-xl font-bold mb-3">USABO Guide</h3>
            <p class="leading-relaxed text-slate-600">
              Everything you need to know to effectively study for and succeed on the USABO exams.
            </p>
          </div>
          <div class="initiative-card p-8">
            <Icon name="uil:microscope" class="w-10 h-10 mb-5" style=`color: ${'var(--color-logo-text)'}` />
            <h3 class="text-xl font-bold mb-3">BioBlitz</h3>
            <p class="leading-relaxed text-slate-600">
              Our interactive biology practice platform helps sharpen your USABO and medicine skills in a competitive format.
            </p>
          </div>
        </div>
      </Container>
    </section>

    <section class="bg-white py-16 md:py-24 border-y border-slate-200">
      <Container>
        <Sectionhead>
          <Fragment slot="title">Thank You to Our Partners!</Fragment>
          <Fragment slot="desc">You've helped us reach a wider audience, and we appreciate you.</Fragment>
        </Sectionhead>
        <div class="mt-12 flex flex-wrap justify-center items-center gap-x-12 sm:gap-x-20 gap-y-12">
          <img src="/partners/bods.png" alt="BODS Logo" class="max-h-16 w-auto transition-transform duration-300 hover:scale-105" />
          <img src="/partners/pandorax.png" alt="Pandorax Logo" class="max-h-16 w-auto transition-transform duration-300 hover:scale-105" />
          <img src="/partners/sciovirtual.png" alt="ScioVirtual Logo" class="max-h-16 w-auto transition-transform duration-300 hover:scale-105" />
          <img src="/partners/baologyLogo.png" alt="Baology Logo" class="max-h-20 w-auto transition-transform duration-300 hover:scale-105" />

        </div>
      </Container>
    </section>

    <section class="join-team-section py-16 md:py-24">
      <Container class="text-center max-w-4xl mx-auto">
        <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight">Join Our Team</h2>
        <p class="text-lg md:text-xl mt-6 opacity-90">
          Interested in our mission? Apply today. We are especially looking to expand our outreach team!
        </p>
        <div class="mt-10 flex flex-col md:flex-row gap-4 justify-center">
            <Link
              href="https://forms.gle/jePabrYs13KvFSqt9"
              target="_blank"
              class:list={["link-primary inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg shadow-sm"]}
              rel="noopener"
            >
              <Icon name="uil:file-alt" class="w-5 h-5 mr-2" />
              Staff Application
            </Link>
            <Link
              href="https://discord.gg/Sq3nTXyS6D"
              target="_blank"
              class:list={["link-primary inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg shadow-sm !bg-white/10 !text-white hover:!bg-white/20"]}
              rel="noopener"
            >
              <Icon name="simple-icons:discord" class="w-5 h-5 mr-2" />
              Join Our Discord
            </Link>
          </div>
      </Container>
    </section>
  </main>
  
  <footer class="py-8">
    <p class="text-sm text-center">
      &copy; {new Date().getFullYear()} Mitosisphere. All Rights Reserved. &bull;
      <a href="/contact">Contact Us</a>
    </p>
  </footer>
</Layout>